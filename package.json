{
  "name": "@okeeffed/tennis-results-cli",
  "version": "1.0.0",
  "author": "Dennis O'Keeffe",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "license": "MIT",
  "files": [
    "dist",
    "src",
    "bin"
  ],
  "engines": {
    "node": ">=18"
  },
  "bin": "./bin/cli.js",
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@tsconfig/node18": "^18.2.0",
    "husky": "^8.0.3",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build:pkg": "tsup src/index.ts --dts --format esm,cjs",
    "install:npm": "npm uninstall -g . && npm i --force -g . && google-search-console help",
    "deploy": "npm run build:pkg && npm run install:npm"
  }
}
